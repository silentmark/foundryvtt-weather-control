{
  "name": "weather-control",
  "title": "Weather Control",
  "version": "4.0.0",
  "description": "A module for FoundryVTT that adds a calendar widget with weather, moons cycles, and a customizable calendar.",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/jstebenne/foundryvtt-calendar-weather.git"
  },
  "author": "Julien St√©benne",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://gitlab.com/jstebenne/foundryvtt-calendar-weather/issues"
  },
  "homepage": "https://gitlab.com/jstebenne/foundryvtt-calendar-weather#readme",
  "main": "main.ts",
  "scripts": {
    "build": "webpack",
    "build:production": "webpack --mode production --env mode=production",
    "start": "webpack serve --hot",
    "test": "jest",
    "test:pipeline": "jest --ci --collect-coverage --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "build-docker": "docker build -t foundryvtt-dev -f ./Dockerfile .",
    "start-docker": "docker run -v ${npm_config_foundrydir}:/foundry -v $(pwd)/dist:/foundry/data/Data/modules/weather-control -p ${npm_config_port}:${npm_config_port} foundryvtt-dev"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^0.8.8-9",
    "@types/jest": "^26.0.23",
    "@types/marked": "^2.0.2",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.7",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-webpack-plugin": "^2.5.3",
    "glob": "^7.1.6",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "marked": "^2.0.3",
    "mini-css-extract-plugin": "^2.2.0",
    "node-sass": "^6.0.0",
    "node-sass-glob-importer": "^5.3.2",
    "null-loader": "^4.0.1",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "sass-loader": "^11.0.1",
    "source-map-loader": "^2.0.1",
    "string-replace-loader": "^3.0.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^8.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-import-glob-loader": "^1.6.3"
  }
}
