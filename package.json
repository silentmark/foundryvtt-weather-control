{
  "name": "weather-control",
  "title": "Weather Control",
  "version": "4.1.3",
  "description": "A module for FoundryVTT that adds a calendar widget with weather, moons cycles, and a customizable calendar.",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/jstebenne/foundryvtt-weather-control.git"
  },
  "author": "Julien St√©benne",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://gitlab.com/jstebenne/foundryvtt-weather-control/issues"
  },
  "homepage": "https://gitlab.com/jstebenne/foundryvtt-weather-control#readme",
  "main": "main.ts",
  "scripts": {
    "build": "webpack",
    "build:production": "webpack --mode production --env mode=production",
    "start": "webpack serve --hot",
    "test": "jest",
    "test:pipeline": "jest --ci --collect-coverage --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "docker": "npm run docker:start",
    "docker:start": "docker run -v ${npm_config_foundrydir}:/foundry -v $(pwd)/dist:/foundry/data/Data/modules/weather-control -p ${npm_config_foundryport}:30000 foundryvtt-dev",
    "docker:build": "docker build -t foundryvtt-dev -f ./Dockerfile .",
    "version": "node ./scripts/increment-version.js"
  },
  "devDependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^0.8.9-7",
    "@types/jest": "^27.0.2",
    "@types/marked": "^3.0.1",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-webpack-plugin": "^3.0.1",
    "jest": "^27.2.5",
    "jest-extended": "^1.0.0",
    "jest-junit": "^13.0.0",
    "marked": "^3.0.7",
    "mini-css-extract-plugin": "^2.4.2",
    "node-sass": "^6.0.1",
    "node-sass-glob-importer": "^5.3.2",
    "null-loader": "^4.0.1",
    "prettier": "^2.4.1",
    "raw-loader": "^4.0.2",
    "sass-loader": "^12.2.0",
    "semver-increment": "^1.0.1",
    "source-map-loader": "^3.0.0",
    "string-replace-loader": "^3.0.3",
    "style-loader": "^3.3.0",
    "ts-jest": "^27.0.6",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-import-glob-loader": "^1.6.3"
  }
